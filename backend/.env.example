# Environment Variables
# Copy this file to .env and fill in the values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=user_management

# JWT Secret for Authentication
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=1d

# File Upload Paths
UPLOAD_DIR=storage
QUESTION_PDF_DIR=storage/question_pdfs
SUBMISSION_PDF_DIR=storage/submission_pdfs
NBGRADER_ASSIGNMENTS_DIR=storage/nbgrader_assignments
NBGRADER_SUBMISSIONS_DIR=storage/nbgrader_submissions
NBGRADER_FEEDBACK_DIR=storage/nbgrader_feedback

# CORS Settings
CORS_ORIGIN=http://localhost:3000
