###############################################
# Backend Environment Variables (Example)
# Copy to .env.development or .env and adjust
###############################################

# Environment
NODE_ENV=development

# Server Configuration
PORT=5000
CORS_ORIGIN=http://localhost:3000
API_PREFIX=/api

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=auto_grade
DB_CONNECTION_LIMIT=10

# Authentication
JWT_SECRET=replace-me-in-prod
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=10

# File Storage
UPLOAD_DIR=storage
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf,text/plain,application/json,application/x-ipynb+json

# ML service
ML_MODEL_BASE_PATH=backend/ml/models
ML_CONFIDENCE_THRESHOLD=0.75
ML_MAX_PROCESSING_TIME=300000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=debug
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m

# Teacher Portal Specific
GRADEBOOK_EXPORT_RETENTION_DAYS=30
NOTIFICATION_RETENTION_DAYS=90
MAX_BULK_OPERATIONS=1000
ATTENDANCE_GRACE_PERIOD_MINUTES=10
